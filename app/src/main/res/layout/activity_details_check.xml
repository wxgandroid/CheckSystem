<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_details_check"
            layout="@layout/app_title_layout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_details_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText

            android:id="@+id/et_details_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m20dp"
            android:layout_marginLeft="@dimen/m18dp"
            android:layout_marginRight="@dimen/m18dp"
            android:layout_marginTop="@dimen/m20dp"
            android:layout_weight="1"
            android:background="@drawable/details_check_edittext_background" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_details_check_submit"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="提交" />

            <Button
                android:id="@+id/btn_details_check_tuijianweixiuchang"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="推荐汽修厂" />

        </LinearLayout>


    </LinearLayout>

</layout>
