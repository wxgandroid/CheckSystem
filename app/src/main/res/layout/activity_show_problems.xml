<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_show_problems"
            layout="@layout/app_title_layout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m100dp"
            android:src="@drawable/show_problem" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_show_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="@dimen/m15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_recommend_factory"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="推荐汽修厂" />

            <Button
                android:id="@+id/btn_other_factory"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="其他汽修厂" />


        </LinearLayout>


    </LinearLayout>
</layout>


