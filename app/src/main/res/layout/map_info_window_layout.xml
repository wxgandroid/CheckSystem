<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/m150dp"
        android:layout_height="@dimen/m100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_map_guide"
            android:layout_width="@dimen/m50dp"
            android:layout_height="@dimen/m50dp"
            android:background="@drawable/map_icon_bg_shape"
            android:scaleType="centerInside"
            android:src="@drawable/has_problem_guide_icon" />


        <ImageView
            android:id="@+id/iv_map_call"
            android:layout_width="@dimen/m50dp"
            android:layout_height="@dimen/m50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/map_icon_bg_shape"
            android:scaleType="centerInside"
            android:src="@drawable/has_problem_phone_icon" />


        <ImageView
            android:id="@+id/iv_map_info"
            android:layout_width="@dimen/m50dp"
            android:layout_height="@dimen/m50dp"
            android:background="@drawable/map_icon_bg_shape"
            android:scaleType="centerInside"
            android:src="@drawable/has_problem_info_icon" />

    </LinearLayout>
</layout>
