                android:orientation="vertical">


                <View
                    style="@style/app_divide_style"
                    android:layout_marginTop="@dimen/m10dp" />

                <LinearLayout style="@style/full_userinfo_ll_style">

                    <TextView
                        style="@style/full_userinfo_tv_style"
                        android:text="姓名" />

                    <EditText
