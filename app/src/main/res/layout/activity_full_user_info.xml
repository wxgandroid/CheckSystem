                    android:layout_marginRight="@dimen/m13dp" />


                <LinearLayout style="@style/full_userinfo_ll_style">

                    <TextView
                        style="@style/full_userinfo_tv_style"
                        android:text="密码" />

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/et_full_userinfo_password"
                        style="@style/full_userinfo_et_style"
                        android:hint="请输入密码" />
                </LinearLayout>

                <View
                    style="@style/app_divide_style"
                    android:layout_marginLeft="@dimen/m13dp"
                    android:layout_marginRight="@dimen/m13dp" />

                <LinearLayout style="@style/full_userinfo_ll_style">

                    <TextView
                        style="@style/full_userinfo_tv_style"
                        android:text="手机号" />

                    <EditText
                        android:id="@+id/et_full_userinfo_phone_num"
                        style="@style/full_userinfo_et_style"
                        android:hint="请输入您的手机号码" />
                </LinearLayout>

                <View
                    style="@style/app_divide_style"
                    android:layout_marginLeft="@dimen/m13dp"
                    android:layout_marginRight="@dimen/m13dp" />

                <LinearLayout style="@style/full_userinfo_ll_style">

                    <TextView
                        style="@style/full_userinfo_tv_style"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tv_full_userinfo_sex"
                        style="@style/full_userinfo_et_style"
                        android:hint="请设置您的性别" />
