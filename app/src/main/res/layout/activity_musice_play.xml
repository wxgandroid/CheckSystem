<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_music_play"
            layout="@layout/app_title_layout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_musicplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_music_play_tuijianqixiuchang"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="推荐汽修厂" />

            <Button
                android:id="@+id/btn_music_play_qitaqixiuchang"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="其他维修厂" />

        </LinearLayout>

    </LinearLayout>
</layout>

