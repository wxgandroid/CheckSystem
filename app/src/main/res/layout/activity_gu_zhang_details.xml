<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_guzhang_details_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_guzhang_details_xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m30dp"
                android:layout_weight="1"
                android:text="型号:"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/m16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/app_divide" />

            <TextView
                android:id="@+id/tv_guzhang_details_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m10dp"
                android:layout_weight="1"
                android:text="规格:"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/m16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m10dp"
            android:background="@color/app_divide" />


        <TextView
            android:id="@+id/tv_guzhang_details_yuanchang_price_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m12dp"
            android:drawableLeft="@drawable/guzhang_details_price"
            android:drawablePadding="@dimen/m10dp"
            android:gravity="center_vertical"
            android:text="原厂：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m1dp"
            android:background="@color/app_divide" />

        <TextView
            android:id="@+id/tv_guzhang_details_pinpai"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m36dp"
            android:layout_marginRight="@dimen/m12dp"
            android:drawableRight="@drawable/guzhang_details_xiala"
            android:gravity="center_vertical"
            android:text="品牌：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m1dp"
            android:background="@color/app_divide" />

        <TextView
            android:id="@+id/tv_guzhang_details_tuijian_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m12dp"
            android:drawableLeft="@drawable/guzhang_details_tui_price"
            android:drawablePadding="@dimen/m10dp"
            android:gravity="center_vertical"
            android:text="推荐参考价：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m1dp"
            android:background="@color/app_divide" />

        <TextView
            android:id="@+id/tv_guzhang_details_pinpai_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m12dp"
            android:drawableLeft="@drawable/guzhang_deitails_pinpai"
            android:drawablePadding="@dimen/m10dp"
            android:gravity="center_vertical"
            android:text="品牌价格：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m1dp"
            android:background="@color/app_divide" />


        <TextView
            android:id="@+id/tv_guzhang_details_shougongfei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m12dp"
            android:drawableLeft="@drawable/guzhang_details_shougong"
            android:drawablePadding="@dimen/m10dp"
            android:gravity="center_vertical"
            android:text="手工费：" />


        <View style="@style/app_divide_style" />

        <TextView
            android:id="@+id/tv_guzhang_details_weixiu_shichang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m12dp"
            android:drawableLeft="@drawable/guzhang_details_yuji"
            android:drawablePadding="@dimen/m10dp"
            android:gravity="center_vertical"
            android:text="预计工时：" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m5dp"
            android:background="#f6f6f6" />

        <!--<TextView-->
        <!--android:id="@+id/tv_guzhang_details_phone"-->
