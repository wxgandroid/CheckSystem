<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/m98dp"
            android:layout_height="@dimen/m98dp"
            android:src="@drawable/no_problem_icon" />

        <TextView
            android:layout_width="@dimen/m150dp"
            android:layout_height="@dimen/m42dp"
            android:layout_marginTop="@dimen/m44dp"
            android:gravity="center"
            android:text="  您的爱车很健康,尚未发现任何问题"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/m18sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_detail_test"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m45dp"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="详细检测" />

            <Button
                android:id="@+id/btn_easy_destroy"
                style="@style/app_button_green_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/m45dp"
                android:layout_margin="@dimen/m10dp"
                android:layout_weight="1"
                android:text="易损零件清单" />

        </LinearLayout>
    </LinearLayout>

</layout>
